<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Assuming you have a list of users called `users` passed to the template -->
      {{#each users}}
      <tr>
        <th scope="row">{{this._id}}</th> <!-- Corrected -->
        <td>{{this.username}}</td> <!-- Corrected -->
        <td>{{this.email}}</td> <!-- Corrected -->
        <td>
          <a href="/users/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
          <a href="/users/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
